<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <title>Form Submission</title>
</head>
<body>
    <div class="container text-center d-flex justify-content-center">
        @{
            ViewData["Title"] = "Home Page";
        }
        @model Survey;
        <form action="/Results" method="post" class="form-group card bg-light w-50 mt-5">
            <br>
            <span class="d-flex justify-content-evenly">
                <label for="FirstName" class="form-label">First Name:</label>
                <input asp-for="FirstName" name="FirstName" id="FirstName" class="form-control w-50">
            </span>
            <span asp-validation-for="FirstName" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="LastName" class="form-label">Last Name:</label>
                <input asp-for="LastName" name="LastName" id="LastName" class="form-control w-50">
            </span>
            <span asp-validation-for="LastName" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="Age" class="form-label">Age:</label>
                <input asp-for="Age" name="Age" id="Age" class="form-control w-50">
            </span>
            <span asp-validation-for="Age" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="Email" class="form-label">Email:</label>
                <input asp-for="Email" name="Email" id="Email" class="form-control w-50">
            </span>
            <span asp-validation-for="Email" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="Password" class="form-label">Password:</label>
                <input asp-for="Password" name="Password" id="Password" class="form-control w-50">
            </span>
            <span asp-validation-for="Password" class="text-danger"></span><br>
            <button type="submit" class="btn btn-primary w-25 justify-content-end my-1 mx-auto">Submit</button>
        </form>
    </div>
</body>
</html>
